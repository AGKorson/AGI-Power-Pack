display(17, 0, "บ                                     บ");
display(18, 0, "บ                                     บ");
display(19, 0, "บ                                     บ");
display(20, 0, "บ                                     บ");
display(21, 0, "ศอออออออออออออออออออออออออออออออออออออผ");

[ set colors for text
set.text.attribute(LT_GRAY, BLACK);

[ display the help text
 display(3, 1, "             AGI Help");
 display(7, 1, "      F1 displays this message.");
 display(8, 1, "      F2 turns the sound off and on.");
 display(9, 1, "      F3 retypes the last line typed.");
display(10, 1, "      F4 look at item in inventory.");
display(11, 1, "      F5 saves your current game.");
display(12, 1, "      F7 restores a saved game.");
display(13, 1, "      F9 restarts the game.");
display(14, 1, "   ALT-Z quits the game.");
display(15, 1, "     TAB shows the inventory screen.");
display(16, 1, "     ESC displays the menu.");
display(17, 1, "  Ctrl-J sets up your joystick.");
display(18, 1, "      +  Increases volume.");
display(19, 1, "      -  Decreases volume.");

[ run a loop to wait for player to press any key
WaitForKey:
if (!have.key())
  {
  goto(WaitForKey);
  }

[ restore input and status line
accept.input();
status.line.on();

[ switch back to graphics display
graphics();

[ restore colors
set.text.attribute(WHITE, BLACK);

return();

