[ lgc.GameHelp: Help Screen
[
[ This screen also demonstrates the use of extended characters 
[ in text mode.
[
[ ********************************************************************

[ no input allowed while help screen is displayed
prevent.input();

[ clear status line
status.line.off();

[ switch to text screen
text.screen();

[ make sure keyboard buffer is clear
lastChar = 0;

[ set colors for border
set.text.attribute(BLUE, BLACK);

[ display the border
 display(2, 0, "ษอออออออออออออออออออออออออออออออออออออป");
 display(3, 0, "บ                                     บ");
 display(4, 0, "บ ๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐๐ บ");
 display(5, 0, "ฬอออออออออออออออออออออออออออออออออออออน");
 display(6, 0, "บ                                     บ");
 display(7, 0, "บ                                     บ");
 display(8, 0, "บ                                     บ");
 display(9, 0, "บ                                     บ");
display(10, 0, "บ                                     บ");
display(11, 0, "บ                                     บ");
