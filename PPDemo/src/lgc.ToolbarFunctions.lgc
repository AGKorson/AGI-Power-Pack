[ [ lgc.ToolbarFunctions[ #define toggleBtn    f240[ if mouse is NOT over toolbar AND NOT over menu, show correct cursorif ((mouseX < 39 || mouseX > 120 || mouseY > 25) && mouseY > 7) {  [ show correct cursor icon  if (cursormode != cursoricon) {    [ change it    cursoricon = cursormode;    set.key(1, &cursoricon, mouse); [ set.cursor(BYVAR, MSGNUM);  }  [ reenable click2move if in walk mode  if (cursormode == C_WALK) {    set(click2move);  }} else {  [ show default cursor icon  if (cursoricon != C_DEFAULT) {    [ change it    cursoricon = C_DEFAULT;    set.key(0, &m1, mouse); [ set.cursor(BYVAR, MSGNUM);    [ disable click2move    reset(click2move);  }}[ check for button clickif (controller(cLeftClick)) {  [ if on button1:  if (posn(tbPoint, -1, 1, &mouseX, &mouseY)) {    if (cursormode != C_DEFAULT) {      [ select it      cursormode = C_DEFAULT;      set(toggleBtn);    }  }    [ if on button2:  if (posn(tbMove, -1, 1, &mouseX, &mouseY)) {    if (cursormode != C_WALK) {      [ select it      cursormode = C_WALK;      set(toggleBtn);    }  }  [ if on button3:  if (posn(tbLook, -1, 1, &mouseX, &mouseY)) {    if (cursormode != C_LOOK) {      [ select it      cursormode = C_LOOK;      set(toggleBtn);    }  }  [ if on button4:  if (posn(tbTalk, -1, 1, &mouseX, &mouseY)) {    if (cursormode != C_TALK) {      [ select it      cursormode = C_TALK;      set(toggleBtn);    }  }  [ if on button5:  if (posn(tbUse, -1, 1, &mouseX, &mouseY)) {    if (cursormode != C_USE) {      [ select it      cursormode = C_USE;      set(toggleBtn);    }  }}[ update buttonsif (toggleBtn) {  reset(toggleBtn);  if (cursormode == C_DEFAULT) {    set.cel(tbPoint, 5);  } else {    set.cel(tbPoint, 0);  }  if (cursormode == C_WALK) {    set.cel(tbMove, 6);  } else {    set.cel(tbMove, 1);  }  if (cursormode == C_LOOK) {    set.cel(tbLook, 7);  } else {    set.cel(tbLook, 2);  }  if (cursormode == C_TALK) {    set.cel(tbTalk, 8);  } else {    set.cel(tbTalk, 3);  }  if (cursormode == C_USE) {    set.cel(tbUse, 9);  } else {    set.cel(tbUse, 4);  }    [ click2move if in walk mode  if (cursormode == C_WALK) {    set(click2move);  } else {    reset(click2move);  }}return();[*****[ messages         [  declared messages go here[*****#message 1 "%g40"#message 2 "%g41"#message 3 "%g42"#message 4 "%g43"#message 5 "%g44"#message 6 "%g45"