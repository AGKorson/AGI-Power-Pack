[ 
[ lgc.ExamineItem
[ 
[ displays a custom close up picture for certain items
[ selectedItem variable has index (offset by 100) of 
[ desired item
[

[ stop the game clock while examining items
block(PAUSE.CLOCK, 1, 0, 0); [ pause.clock(MODE)

[ fade out current picture
block(FADE.OUT, 0, FADECOUNT, BLACK); [ fade.out(BYVAR, DELAY, COLOR)

[ no script entries for this sequence
set(noScript);
[ no regular input either
prevent.input();
status.line.off();

[ save current colors
set.text.attribute(-1, 0);

[ draw the picture for selected item
if (selectedItem == 107) {
  work1 = pic.ComboList;
}
if (selectedItem == 110) {
  work1 = pic.FolderInterior;
}
if (selectedItem == 112) {
  work1 = pic.MusicSheet;
}
load.pic(work1);
draw.pic(work1);
discard.pic(work1);

[ hide objects while showing items
block(HIDE.OBJS, 1, 0, 0); [ hide.objs(MODE)
show.pic();

[ some items need text added
if (selectedItem == 110) {
  set.text.attribute(-1, 0);
  set.text.attribute(RED, WHITE);
  display(6, 47, "Drew, don't");
  display(7, 47, "forget to");
  display(8, 47, "change the");
  display(9, 47, "reset code to");
  display(10, 47, "Snd4chan$");
  set.text.attribute(0, -1);
}

[ fade in
block(FADE.IN, 0, FADECOUNT, 0); [ fade.in(BYVAR, DELAY, COLOR)
lastChar = 0;
:waitforit
if (!have.key()) {
  goto(waitforit);
}

[ fade out
block(FADE.OUT, 0, FADECOUNT, BLACK); [ fade.out(BYVAR, DELAY, COLOR)

return();

